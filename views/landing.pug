extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/landing", method = "POST")
    input(name="lead_email", type="email", placeholder="Enter your email here")
    button(type="submit") Submit
  if leads
    h1 Leads
    for lead in leads
      p 
        span #{lead.email}
        |
        a(href="/landing/lead/" + lead.id) Details